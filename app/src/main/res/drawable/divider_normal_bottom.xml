<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp"
        <shape>
            <solid android:color="@android:color/transparent"></solid>
            <stroke android:color="#B4B4B4"
                android:width="1dp">

            </stroke>
        </shape>

    </item>

    <item>
        <selector>
            <item android:state_pressed="true">
                <shape>
                    <solid android:color="#de5a19"></solid>
                </shape>

            </item>
            <item>
                <shape>
                    <!--android:color="@android:color/transparent表示，没有设置填充色的时候，默认不会填充黑色，变成透明色-->
                    <solid android:color="@android:color/transparent"></solid>
                </shape>
            </item>
        </selector>
    </item>

</layer-list>